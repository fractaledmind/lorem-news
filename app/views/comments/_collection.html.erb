<div id="comments">
  <% if comments.any? %>
    <table class="w-[calc(100%+2rem)] -mx-4 -mb-0">
      <tbody>
        <% comments.each do |comment| %>
          <tr class="*:px-4 *:py-2">
            <td>
              <% cache comment do %>
                <%= render comment %>
              <% end %>
            </td>
            <td>
              <% if comment.user == Current.user %>
                <div class="flex justify-end gap-2">
                  <%= link_to "→ Edit", edit_comment_path(comment), class: "button sm" %>
                  <%= button_to "× Delete", comment, method: :delete, class: "dangerous sm" %>
                <div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="flex items-center justify-center gap-2">
      <span class="">No comments yet… Want to be the first?</span>
    </div>
  <% end %>
</div>
